= content_for :page_title, @component.name

.content__body
  %h3
    = render "backend_apps/shared/breadcrumbs"
    = link_to "Components", index_backend_app_components_path(@app)
    \-
    = @component.name
  %p
    = @component.description
.content__body
  %h4
    Models
  - @components.each do |component|
    - component.models.each do |name, schema|
      %p
        = name
      %table
        %tr
          %td
            %p
              Column name
          %td
            %p
              Data type
          %td
            %p
              Required
          %td
            %p
              Relationship to
        - schema.each do |column, hash|
          %tr
            %td
              %p
                = column
            %td
              %p
                = hash["type"]
            %td
              %p
                = hash["required"]
            %td
              %p
                = hash["relationship_to"]
- if @subcomponents.present?
  .content__body
    %h4
      Subcomponents
    .content__body__list
      %ul{ type: "circle" }
        - @subcomponents.each do |component|
          %li
            %p
              = component.name
