- if content_for? :header
  = yield :header
- else
  %header
    .header
      .header__logo
        = link_to "Firebot", root_path
      .header__navigation--right
        - if logged_in?
          .header__navigation__links
            = link_to "Help", help_path
          .header__user
            .header__user__image{ style: user_background_image(current_user) }
            .header__user__name
              = current_user.first_name_capitalized
            .header__user__menu
              %ul
                -# %li
                -#   -# Edit, Billing
                -#   = link_to "Account", "#"
                %li
                  = link_to "Apps", backend_apps_path
                %li
                  = link_to "Logout", logout_path
        - else
          .header__navigation__links
            = link_to "Login", login_path
            = link_to "Sign up", new_user_path
