%table
  %tr
    %td
      %p
        Column name
    %td
      %p
        Data type
    %td
      %p
        Required
    %td
      %p
        Relationship to
  - model.schema.sort.each do |key, hash|
    %tr
      %td
        %p
          = key
      %td
        %p
          = hash["type"]
      %td
        %p
          = hash["required"]
      %td
        %p
          = hash["relationship_to"]
      %td
        = form_tag remove_column_backend_app_model_path(@app, model) do
          = hidden_field_tag :name, key
          = button_tag "Remove"
