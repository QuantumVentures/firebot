= content_for :page_title, "Models"

.content__body
  %h3
    = render "backend_apps/shared/breadcrumbs"
    Models
  %p
    Add a
    = link_to "new model", new_backend_app_model_path(@app)
  .content__body__list
    %ol
      - @models.each do |model|
        %li
          %p
            = link_to edit_backend_app_model_path(@app, model) do
              = model.name
              \-
              %i
                = model.description
          %table
            %tr
              %td
                %p
                  Column name
              %td
                %p
                  Data type
              %td
                %p
                  Required
              %td
                %p
                  Relationship to
            - model.schema.sort.each do |key, hash|
              %tr
                %td
                  %p
                    = key
                %td
                  %p
                    = hash["type"]
                %td
                  %p
                    = hash["required"]
                %td
                  %p
                    = hash["relationship_to"]
